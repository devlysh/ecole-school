datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

model User {
  id           Int        @id @default(autoincrement())
  email        String     @unique
  passwordHash String?    @map("password_hash")
  name         String?    @map("name")
  dateJoined   DateTime   @default(now()) @map("date_joined")
  isActive     Boolean    @default(true) @map("is_active")
  roles        UserRole[]
  student      Student?
  teacher      Teacher?
  settings     Json?

  @@index([email], name: "idx_user_email")
  @@index([isActive], name: "idx_user_is_active")
  @@map("users")
}

model Role {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?

  users UserRole[]

  @@map("roles")
}

model UserRole {
  userId Int @map("user_id")
  roleId Int @map("role_id")

  user User @relation(fields: [userId], references: [id])
  role Role @relation(fields: [roleId], references: [id])

  @@id([userId, roleId])
  @@index([userId], name: "idx_user_roles_user_id")
  @@index([roleId], name: "idx_user_roles_role_id")
  @@map("user_roles")
}

model Currency {
  id   Int    @id @default(autoincrement())
  code String @unique
  name String @unique

  @@map("currencies")
}

model Language {
  id   Int    @id @default(autoincrement())
  name String @unique
  code String @unique

  teacherLanguages TeacherLanguage[]
  StudentLanguage  StudentLanguage[]

  @@map("languages")
}

model Student {
  userId            Int    @id @map("user_id")
  assignedTeacherId Int?   @map("assigned_teacher_id")
  exTeacherIds      Int[]  @default([]) @map("ex_teacher_ids")
  stripeCustomerId  String @unique @map("stripe_customer_id")

  user             User              @relation(fields: [userId], references: [id])
  teacher          Teacher?          @relation(fields: [assignedTeacherId], references: [userId])
  bookedClasses    BookedClass[]
  credits          Credit[]
  studentLanguages StudentLanguage[]
  PaidClass        PaidClass[]
  UnpaidClass      UnpaidClass[]

  @@index([assignedTeacherId], name: "idx_student_assigned_teacher_id")
  @@map("students")
}

model StudentLanguage {
  studentId  Int @map("student_id")
  languageId Int @map("language_id")

  student  Student  @relation(fields: [studentId], references: [userId])
  language Language @relation(fields: [languageId], references: [id])

  @@id([studentId, languageId])
  @@map("student_languages")
}

model Teacher {
  userId Int @id @map("user_id")

  user           User              @relation(fields: [userId], references: [id])
  students       Student[]
  languages      TeacherLanguage[]
  availableSlots AvailableSlot[]
  bookedClasses  BookedClass[]
  vacations      Vacation[]
  PaidClass      PaidClass[]
  UnpaidClass    UnpaidClass[]

  @@map("teachers")
}

model TeacherLanguage {
  teacherId  Int @map("teacher_id")
  languageId Int @map("language_id")

  teacher  Teacher  @relation(fields: [teacherId], references: [userId])
  language Language @relation(fields: [languageId], references: [id])

  @@id([teacherId, languageId])
  @@map("teacher_languages")
}

model Vacation {
  id        Int      @id @default(autoincrement())
  date      DateTime
  teacherId Int      @map("teacher_id")
  teacher   Teacher  @relation(fields: [teacherId], references: [userId])

  @@map("vacations")
}

model AvailableSlot {
  id        Int      @id @default(autoincrement())
  startTime DateTime @map("start_time")
  endTime   DateTime @map("end_time")
  rrule     String?
  teacher   Teacher  @relation(fields: [teacherId], references: [userId])
  teacherId Int      @map("teacher_id")

  @@map("available_slots")
}

model BookedClass {
  id        Int      @id @default(autoincrement())
  date      DateTime
  student   Student  @relation(fields: [studentId], references: [userId])
  studentId Int      @map("student_id")
  teacher   Teacher  @relation(fields: [teacherId], references: [userId])
  teacherId Int      @map("teacher_id")
  recurring Boolean

  @@map("booked_classes")
}

model PaidClass {
  id        Int      @id @default(autoincrement())
  date      DateTime
  student   Student  @relation(fields: [studentId], references: [userId])
  studentId Int      @map("student_id")
  teacher   Teacher  @relation(fields: [teacherId], references: [userId])
  teacherId Int      @map("teacher_id")
  credit    Credit[]

  @@map("paid_classes")
}

model UnpaidClass {
  id        Int      @id @default(autoincrement())
  date      DateTime
  student   Student  @relation(fields: [studentId], references: [userId])
  studentId Int      @map("student_id")
  teacher   Teacher  @relation(fields: [teacherId], references: [userId])
  teacherId Int      @map("teacher_id")

  @@map("unpaid_classes")
}

model Credit {
  id                  Int        @id @default(autoincrement())
  studentId           Int        @map("student_id")
  student             Student    @relation(fields: [studentId], references: [userId])
  addedAt             DateTime   @default(now()) @map("added_at")
  usedAt              DateTime?  @map("used_at")
  usedWithPaidClass   PaidClass? @relation(fields: [usedWithPaidClassId], references: [id])
  usedWithPaidClassId Int?

  @@map("credits")
}
